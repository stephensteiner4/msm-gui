<h1>
  List of all actors
</h1>

<hr>

<form action="/actors" method="post">
  <label for="actor_name">Name</label>
  <input id="actor_name" name="name"><br>

  <label for="actor_dob">Dob</label>
  <input id="actor_dob" name="dob" type="date"><br>

  <label for="actor_bio">Bio</label>
  <textarea id="actor_bio" name="bio" rows="3"></textarea><br>
  
  <label for="actor_image">Image</label>
  <input id="actor_image" name="image"><br>

  <button>Create actor</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
