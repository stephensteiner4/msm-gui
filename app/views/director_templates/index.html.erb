<h1>
  List of all directors
</h1>

<hr>

<form action="/directors" method="post">
  <label for="director_name">Name</label>
  <input id="director_name" name="name"><br>

  <label for="director_dob">Dob</label>
  <input id="director_dob" name="dob" type="date"><br>

  <label for="director_bio">Bio</label>
  <textarea id="director_bio" name="bio" rows="3"></textarea><br>
  
  <label for="director_image">Image</label>
  <input id="director_image" name="image"><br>

  <button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
