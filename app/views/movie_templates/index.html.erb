<h1>
  List of all movies
</h1>

<hr>

<form action="/movies" method="post">
  <label for="movie_title">Title</label>
  <input id="movie_title" name="title"><br>

  <label for="movie_year">Year</label>
  <input id="movie_year" name="year"><br>

  <label for="movie_duration">Duration</label>
  <input id="movie_duration" name="duration"><br>
  
  <label for="movie_description">Description</label>
  <textarea id="movie_description" name="description" rows="3"></textarea><br>

  <label for="movie_image">Image</label>
  <input id="movie_image" name="image"><br>
  
  <label for="movie_director_id">Director ID</label>
  <input id="movie_director_id" name="director_id"><br>

  <button>Create movie</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_movies = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_movie = matching_movies.at(0) %>

      <%= the_movie.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
