<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">
  Go back
</a><br>
<a href="/delete_movie/<%=@the_movie.id%>" >
  Delete movie
</a>

<hr>

<form action="/movies/<%=@the_movie.id%>/modify" method="post">
  <label for="movie_title">Title</label>
  <input id="movie_title" name="title" value=<%=@the_movie.title%>><br>

  <label for="movie_year">Year</label>
  <input id="movie_year" name="year" value=<%=@the_movie.year%>><br>

  <label for="movie_duration">Duration</label>
  <input id="movie_duration" name="duration" value=<%=@the_movie.duration%>><br>

  <label for="movie_description">Description</label>
  <textarea id="movie_description" name="description" rows=3><%=@the_movie.description%></textarea><br>
  
  <label for="movie_image">Image</label>
  <input id="movie_image" name="image" value=<%=@the_movie.image%>><br>
  
  <label for="movie_director_id">Director ID</label>
  <input id="movie_director_id" name="director_id" value=<%=@the_movie.director_id%>><br>

  <button>Update movie</button>
</form>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <%= the_director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
